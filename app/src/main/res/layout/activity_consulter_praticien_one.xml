<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_id_praticien_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ConsulterCR"
        android:layout_centerVertical="false"
        android:baselineAligned="false"
        android:foregroundGravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/praticien_id_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/Id"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/praticien_id_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_nom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_id_praticien_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_nom_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/praNom"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_nom_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_prenom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_nom_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_prenom_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/praPrenom"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_prenom_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_adresse_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_prenom_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_adresse_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="@string/praAdresse"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_adresse_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_cp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_adresse_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_cp_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="@string/praCp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_cp_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_ville_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_cp_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_ville_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/praVille"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_ville_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_coef_not_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_ville_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_coef_not_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/praCoefNot"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_coef_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pra_type_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pra_coef_not_view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pra_type_label_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:text="@string/praType"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pra_type_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/ConsulterPra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ConsulterPrat"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/retour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="@string/retour" />


</RelativeLayout>

