<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ConsulterCollab">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/layout_id_collab_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ConsulterCollab"
                android:layout_centerVertical="false"
                android:baselineAligned="false"
                android:foregroundGravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_id_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/crIdLabel"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_id_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_matricule_collab_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_id_collab_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_matricule_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/crVisitLabel"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_matricule_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_nom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_visit_cr_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_nom_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/praNom"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_nom_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_prenom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_nom_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_prenom_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="@string/DateRap"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_prenom_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_adresse_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_prenom_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_adresse_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="@string/collabAdresse"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_adresse_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_cp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_adresse_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_cp_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabCp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_cp_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_ville_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_cp_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_ville_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/Echant"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_ville_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_date_embauche_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_ville_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_date_embauche_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabDateEmbauche"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_date_embauche_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_fonction_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_date_embauche_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_fonction_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabFonction"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_fonction_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_departement_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_fonction_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_departement_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabDepartement"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_departement_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_region_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_departement_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_region_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabRegion"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_region_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_secteur_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_region_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_secteur_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabSecteur"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_secteur_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:id="@+id/layout_collab_supp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_collab_secteur_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collab_supp_label_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/collabSupp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/collab_supp_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

            </TableRow>

        </TableLayout>
    </ScrollView>



    <TextView
        android:id="@+id/ConsulterCollab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ConsulterCollab"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/retour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/toast_frame"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="@string/retour" />


</RelativeLayout>