<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/SaisieCR"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bts.sio.compterendu.PanelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SaisieAC">

        <TableLayout
            android:id="@+id/TableFormAc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/row_praticien_ac_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ac_praticien_label_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.7"
                    android:text="@string/Praticien"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <Spinner
                    android:id="@+id/spinner_pra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_addPra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.3"
                    android:text="@string/ajouter" />

            </TableRow>

            <LinearLayout
                android:id="@+id/row_ac_praticien_entry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/list_ac_praticien"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>


            <TableRow
                android:id="@+id/row_date_ac_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ac_date_label_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.7"
                    android:text="@string/DateRap"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/ac_date_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:hint="Choisissez une date"
                    android:inputType="date" />

            </TableRow>

            <TableRow
                android:id="@+id/row_ac_theme_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ac_theme_label_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.7"
                    android:text="@string/acTheme"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/ac_theme_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:hint="Théme de l'activité"
                    android:inputType="text" />

            </TableRow>

            <TableRow
                android:id="@+id/row_ac_lieu_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ac_lieu_label_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.7"
                    android:text="@string/acLieu"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/ac_lieu_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:hint="Lieu de l'activité"
                    android:inputType="textMultiLine" />

            </TableRow>

            <TableRow
                android:id="@+id/row_ac_realisation_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ac_realisation_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1"
                    android:text="@string/acReal"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold|italic" />

                <Spinner
                    android:id="@+id/spinner_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/ac_realisation_budget_saisie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.5"
                    android:hint="Budget alloué"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="28dp"
                    android:layout_weight="0.3"
                    android:text="@string/ajouter" />
            </TableRow>

            <LinearLayout
                android:id="@+id/row_ac_realisation_entry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/list_ac_realisation"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>

            <TableRow
                android:id="@+id/row_btn_ac_saisie"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/valid_saisie_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Valider" />
            </TableRow>
        </TableLayout>
    </ScrollView>


    <TextView
        android:id="@+id/SaisieAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/SaisieAC"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="normal|bold" />


</RelativeLayout>

